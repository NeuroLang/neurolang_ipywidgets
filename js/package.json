{
  "name": "neurolang-ipywidgets",
  "version": "0.1.0",
  "description": "A custom jupyter widget library for neurolang web application.",
  "author": "Hande Gözükan, Romain Primet, Demian Wassermann",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeuroLang/neurolang_ipywidgets.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js",
    "css/*.css",
    "custom/**/*.css"
  ],
  "scripts": {
    "clean": "rimraf dist/ && rimraf ../neurolang_ipywidgets/labextension/ && rimraf ../neurolang_ipywidgets/nbextension",
    "prepublish": "yarn run clean && yarn run build:prod",
    "build": "webpack --mode=development && yarn run build:labextension:dev",
    "build:prod": "webpack --mode=production && yarn run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "watch": "webpack --watch --mode=development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0",
    "webpack": "^5",
    "rimraf": "^2.6.1",
    "eslint": "^7.10.0",
    "prettier": "2.1.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4",
    "@jupyter-widgets/controls": "^1.1 || ^2 || ^3",
    "codemirror": "^5.54.0",
    "css-loader": "^3.6.0",
    "file-loader": "^6.0.0",
    "lodash": "^4.17.21",
    "style-loader": "^1.2.1"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../neurolang_ipywidgets/labextension",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
